{
  "name": "mergemaster",
  "version": "1.0.2",
  "type": "module",
  "description": "AI-powered coding assistant with an interactive terminal interface. Multi-model support (GPT-5.1, GPT-4o, Claude Sonnet 4.5, Opus, Haiku). Session persistence, command approval, and real-time streaming.",
  "main": "./dist/index.js",
  "bin": {
    "mergemaster": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test:cli": "npm run build && node dist/index.js"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "agent",
    "anthropic",
    "openai",
    "claude",
    "gpt",
    "terminal",
    "tui",
    "developer-tools",
    "code-generation"
  ],
  "author": "Aditya Tipre",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/atipre/mergemaster.git"
  },
  "homepage": "https://github.com/atipre/mergemaster#readme",
  "bugs": {
    "url": "https://github.com/atipre/mergemaster/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@langchain/core": "^1.0.2",
    "@langchain/langgraph": "^1.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "blink": "^1.0.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "dotenv": "^16.4.0",
    "ink": "^5.1.0",
    "ink-spinner": "^5.0.0",
    "node-pty": "^1.0.0",
    "openai": "^6.9.1",
    "ora": "^8.1.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.18",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
